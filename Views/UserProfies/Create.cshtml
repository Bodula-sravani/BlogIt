@model BlogIt.Models.UserProfie

@{
    ViewData["Title"] = "Create";
}
<div>
    <a asp-action="Index" class="btn btn-primary" style="background-color:indianred" class="carousel-control-prev-icon">Back</a>
</div>
<h1 style="text-align:center">Profile</h1>
<hr />
<div class="row">
    <div class="col-md-6 offset-md-3">
        <form asp-action="Create" enctype="multipart/form-data">
            <div style="text-align: right;">
                <div style="float: right;">
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" style="background-color:indianred" />
                    </div>
                </div>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label for="ProfilePic" class="control-label">Profile Picture:</label>
                <input type="file" id="ProfilePic" name="ProfilePic" accept="image/*" class="form-control-file" />
                <span asp-validation-for="ProfilePic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Name:</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group" hidden>
                <label asp-for="Email" class="control-label">Email:</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label">Description:</label>
                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Interests" class="control-label">Interests:</label>
                <textarea asp-for="Interests" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Interests" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Facebook" class="control-label">Facebook:</label>
                <input asp-for="Facebook" class="form-control" placeholder="Enter URL" />
                <span asp-validation-for="Facebook" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Instagram" class="control-label">Instagram:</label>
                <input asp-for="Instagram" class="form-control" placeholder="Enter URL" />
                <span asp-validation-for="Instagram" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Twitter" class="control-label">Twitter:</label>
                <input asp-for="Twitter" class="form-control" placeholder="Enter URL" />
                <span asp-validation-for="Twitter" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Youtube" class="control-label">Youtube:</label>
                <input asp-for="Youtube" class="form-control" placeholder="Enter URL" />
                <span asp-validation-for="Youtube" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="UserId" class="control-label">Youtube:</label>
                <input asp-for="UserId" class="form-control" placeholder="Enter URL" />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
